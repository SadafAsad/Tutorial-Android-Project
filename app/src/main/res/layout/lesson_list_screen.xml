<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/screen2" />

    <Switch
        android:id="@+id/sequential_progression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title"
        android:text="@string/screen2_switch_button"/>
    
    <ListView
        android:id="@+id/lessons_list"
        android:layout_width="match_parent"
        android:layout_below="@id/sequential_progression"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lessons_list"
        android:text="@string/screen2_logout_button"/>

</RelativeLayout>